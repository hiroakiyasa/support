{% for page in site.pages %}
  {% unless page.sitemap_exclude == 'y' %}
  {% unless page.url contains '.backup' or page.url contains '-old' or page.url contains '.DS_Store' %}
  <url>
    <loc>https://hiroakiyasa.github.io/support{{ page.url | remove: 'index.html' }}</loc>
    <lastmod>{{ page.date | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endunless %}
  {% endunless %}
{% endfor %}
